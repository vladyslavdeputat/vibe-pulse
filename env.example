# Copy this file to .env.local and replace the placeholder values.

# ─── Supabase ──────────────────────────────────────────────────────────────────
# Project URL (https://xyzcompany.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=

# Public anon key (safe to expose to the client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Service role key (server-side only—never expose to the client)
SUPABASE_SERVICE_ROLE_KEY=

# ─── Clerk ─────────────────────────────────────────────────────────────────────
# Publishable key (starts with pk_)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=

# Secret key for server-side Clerk SDK (starts with sk_)
CLERK_SECRET_KEY=

# ─── OpenAI ────────────────────────────────────────────────────────────────────
# API key used by server-side routes (starts with sk- or sk-proj-)
OPENAI_API_KEY=
